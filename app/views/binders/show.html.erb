<!-- Header  -->

<div class="row">
  <div class="ten columns">
    <div class="panel radius">
      <h1>Binder name: <%= @binder.name %><br></h1>
      <h3><%= @binder.description %></h3>
    </div>
  </div>
  <div class="two columns">

      <h4><%= link_to 'Edit', edit_binder_path %></h4>
      <h4><%= link_to 'Delete', @binder, :method => :delete, :confirm => "You sure?" %></h4>
  </div>
</div>

<!-- End Header -->
<div class="city_list">
<ol>
<% @demographics.each do |data| %>
<div class="row">
  <div class="one columns"></div>
  <div class="four columns">
   <li> <p><strong><%= link_to(data.city,data) %>, <%= data.state %></strong></p></li>
    <ul>
      <li>Avg household income: <strong><%= number_to_currency(data.household_income, :precision => 0) %></strong></li>
      <li>Median Age: <strong><%= data.median_age %></strong></li>
      <li>Homes with kids: <strong><%= number_to_percentage(data.homes_with_kids, :precision => 2) %></strong></li>
      <li>Single Males: <strong><%= number_to_percentage(data.single_males, :precision => 2) %></strong> / Females: <strong><%= number_to_percentage(data.single_females, :precision => 2) %></strong></li>
    </ul>
  </div>
  <div class="four columns">
    <p>&nbsp;</p>
    <ul>
      <li>Avg value of single family home: <strong><%= number_to_currency(data.single_family_home, :precision => 0) %></strong> </li>
      <li>Single Males: <strong><%= number_to_percentage(data.single_males, :precision => 2) %></strong></li>
      <li>Single Females: <strong><%= number_to_percentage(data.single_females, :precision => 2) %></strong></li>
      <li>Owners: <strong><%= number_to_percentage(data.owners, :precision => 2) %></strong> / Renters: <strong><%= number_to_percentage(data.renters, :precision => 2) %></strong></li>
    </ul>
  </div>
  <div class="three columns"></div>
  <% if data.note.present? %>
  <p>Your note:</p>
  <p><%= data.note %></p>
  <% end %>
</div>
<!-- End Feed Entry -->
<hr />
<% end %>
</ol>
</div>

<table class="twelve columns">
  <thead>
    <tr>
      <th>City, State</th>
      <th>Avg household income</th>
      <th>Median age</th>
      <th>Homes with kids</th>
      <th>Single males</th>
      <th>Single females</th>
      <th>Avg value of single family home</th>
      <th>Owners</th>
      <th>Renters</th>
      <th>Note</th>
    </tr>
  </thead>
  <tbody>
   <% @demographics.each do |data| %>
    <tr>
      <td><%= link_to(data.city,data) %>, <%= data.state %></td>
      <td><%= number_to_currency(data.household_income, :precision => 0) %></td>
      <td><%= data.median_age %></td>
      <td><%= number_to_percentage(data.homes_with_kids, :precision => 2) %></td>
      <td><%= number_to_percentage(data.single_males, :precision => 2)%> </td>
      <td><%= number_to_percentage(data.single_females, :precision => 2) %></td>
      <td><%= number_to_currency(data.single_family_home, :precision => 0) %></td>
      <td><%= number_to_percentage(data.owners, :precision => 2) %></td>
      <td><%= number_to_percentage(data.renters, :precision => 2) %></td>
      <td><%= data.note %></td>
    </tr>
    <% end %>
  </tbody>
</table>
